{# dump(wccstats) #}

{% import _self as w %}

{% macro show(name, var, max) %}
    <tr>
        <td>{{name}}</td>
        {% if var is defined %}
            {% for lev in 0..max %}
                <td style="width: 32px; text-align: center;">
                    {%if var[lev] is defined %}
                        {{var[lev]}}
                    {% else %}
                        -
                    {% endif %}
                </td>
            {% endfor %}
        {% endif %}
    </tr>
{% endmacro %}

