{% extends 'ClanmanagerBundle::base.html.twig' %}

{% block title %}CoC ClanManager{% endblock %}

{% block body %}
    <h1>Wars</h1>

    <table>
        {% for war in wars %}
            <tr>
                <td>{{ war.id }}</td>
                <td><a href="{{ path('war_view',{'war_id':war.id}) }}">{{ war.start|date('Y/m/d') }}</a></td>
                <td>{{ war.size }}v{{ war.size }}</td>
                <td>{{ war.warclans[0].clan.name }} ({{ war.warclans[0].wins }})</td>
                <td> - </td>
                <td>{{ war.warclans[1].clan.name }} ({{ war.warclans[1].wins }})</td>
            </tr>
        {% endfor %}
    </table>

    <p><a href="#">Start New War</a></p>

{% endblock %}